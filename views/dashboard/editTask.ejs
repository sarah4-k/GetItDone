<!DOCTYPE html>
<html lang="en">
<head>
<link rel="icon" type="image/png" href="/image/TODO.png">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Task</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/PageStyle.css">
</head>

<body>

    <%- include('../partials/nav_dashboard') %> 
   <main class="container my-5">
    <div class="container mt-5">
  <h2 class="text-center mb-4">Edit Task</h2>

  <section class="card p-4">
  <form action="/task/<%= task._id %>/edit" class="mt-3" method="POST" aria-labelledby="task-form">
    <fieldset>
    
        <!-- Task Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Task Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        value="<%= task.title %>"
        required
      />
    </div>
    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="3"
      ><%= task.description || '' %></textarea>
    </div>

    <!-- Category -->
    <div class="mb-3">
      <label for="category" class="form-label">Category</label>
      <select class="form-select" id="category" name="category">
        <% categories.forEach(cat => { %>
          <option value="<%= cat %>" <%= task.category === cat ? 'selected' : '' %>><%= cat %></option>
        <% }) %>
        <option value="Other...">Other...</option>
      </select>
      <div class="form-text">Choose a category for your task.</div>
    </div>
    <!-- Due Date -->
    <div class="mb-3">
      <label for="dueDate" class="form-label">Due Date</label>
      <input
        type="date"
        class="form-control"
        id="dueDate"
        name="dueDate"
        value="<%= task.dueDate ? task.dueDate.toISOString().split('T')[0] : '' %>"
      />
    </div>
    <!-- Priority -->
    <div class="mb-3">
      <label class="form-label">Priority</label>
      <div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="priority"
            id="high"
            value="1"
            <%= task.priority === 1 ? 'checked' : '' %>
          />
          <label class="form-check-label" for="high">High</label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="priority"
            id="medium"
            value="2"
            <%= task.priority === 2 ? 'checked' : '' %>
          />
          <label class="form-check-label" for="medium">Medium</label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="priority"
            id="low"
            value="3"
            <%= task.priority === 3 ? 'checked' : '' %>
          />
          <label class="form-check-label" for="low">Low</label>
        </div>
      </div>
    </div>
    <!-- Buttons -->
    <button type="submit" class="btn btn-success">Update Task</button>
    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
  
</div>
</fieldset>
</form>
</section>
</main>

<%- include('../partials/footer') %>

</body>
</html>

